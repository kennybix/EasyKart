@model Order

<h1>Order Details</h1>
<p><strong>Order ID:</strong> @Model.Id</p>
<p><strong>Order Date:</strong> @Model.OrderDate.ToString("yyyy-MM-dd HH:mm")</p>
<p><strong>Total Amount:</strong> $@Model.TotalAmount.ToString("F2")</p>

<h2>Items</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderItems)
        {
            <tr>
                <td>@item.Product.Name</td>
                <td>@item.Quantity</td>
                <td>$@item.Price.ToString("F2")</td>
                <td>$@(item.Quantity * item.Price).ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>
